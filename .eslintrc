{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "import",
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "strict": "off",
    "semi": [
      "error",
      "never"
    ],
    "no-fn-reference-in-iterator": "off",
    "no-confusing-arrow": "off",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "React",
        "ignoreRestSiblings": false
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before",
          "+": "before",
          "&&": "before",
          "||": "before"
        }
      }
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "global-require": "off",
    "quote-props": [
      "error",
      "as-needed"
    ],
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "import/no-named-as-default": "off",
    "import/no-unresolved": "off",
    "import/newline-after-import": [
      "warn",
      {
        "count": 1
      }
    ],
    "import/extensions": [
      "error",
      "never",
      {
        "json": "always",
        "scss": "always",
        "sass": "always",
        "css": "always",
        "png": "always",
        "jpg": "always",
        "svg": "always"
      }
    ],
    "import/order": [
      "warn",
      {
        "groups": [
          [
            "builtin",
            "external"
          ],
          [
            "internal",
            "parent"
          ],
          [
            "sibling",
            "index"
          ]
        ]
      }
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": [
      "warn",
      {
        "ignore": [
          "classes",
          "theme",
          "sheet",
          "sheets"
        ]
      }
    ],
    "class-methods-use-this": [
      "warn",
      {
        "exceptMethods": [
          "componentDidMount",
          "componentDidUpdate",
          "componentDidCatch",
          "componentWillMount",
          "componentWillUpdate",
          "componentWillReceiveProps",
          "componentWillUnmount",
          "shouldComponentUpdate",
          "render"
        ]
      }
    ],
    "jsx-a11y/interactive-supports-focus": "off",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/alt-text": "off",
    "jsx-quotes": ["error", "prefer-single"]
  }
}
